<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal" android:layout_height="70dp">
        <ImageView
                android:id="@+id/friImg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="5" android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="wrap_content">
                <TextView android:id="@+id/name"
                          android:textColor="#201f1f"
                          android:layout_marginTop="8dp"
                          android:layout_marginStart="20dp"
                          android:textSize="20sp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent"
                              android:gravity="right" android:layout_height="wrap_content">
                    <TextView android:id="@+id/time"
                              android:textAlignment="center"
                              android:layout_marginTop="7dp"
                              android:layout_marginEnd="10dp"
                              android:textSize="15sp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/mes"
                      android:textSize="15sp"
                      android:layout_marginTop="8dp"
                      android:layout_marginStart="20dp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>