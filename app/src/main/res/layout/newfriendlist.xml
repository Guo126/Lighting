<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_height="60dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/newfriendImg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_weight="5" android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="match_parent">
                <TextView android:id="@+id/newfir_name"
                    android:textColor="#201f1f"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <Button
                android:id="@+id/button_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="同意"
                android:focusable="true"
                android:clickable="true"/>
            <Button
                android:id="@+id/button_refuse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="拒绝"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>