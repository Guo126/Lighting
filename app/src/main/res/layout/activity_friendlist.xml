<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_height="60dp">
        <ImageView
            android:id="@+id/friendImg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <LinearLayout android:layout_width="0dp"
            android:layout_weight="5" android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="wrap_content">
                <TextView android:id="@+id/name"
                    android:textColor="#201f1f"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content"
                android:id="@+id/speak"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>